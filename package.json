{
  "name": "@wellyshen/use-web-animations",
  "version": "0.1.4",
  "description": "React hook for highly-performant and manipulable animations using Web Animations API.",
  "license": "MIT",
  "homepage": "https://use-web-animations.netlify.app",
  "repository": "https://github.com/wellyshen/use-web-animations",
  "bugs": "https://github.com/wellyshen/use-web-animations/issues",
  "keywords": [
    "react",
    "hook",
    "react-hook",
    "web-animations-hook",
    "use",
    "use-web-animations",
    "web-animations",
    "web-animations-api",
    "waapi",
    "animation",
    "transition",
    "motion",
    "playback-control",
    "performance",
    "typescript"
  ],
  "author": "Welly Shen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "dev": "yarn clean:dev && rollup -c rollup/config.js -w --environment BUILD:dev",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint": "run-p lint:*",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn clean:cov && yarn test --coverage",
    "build:demo": "yarn clean:dev && yarn clean:demo && rollup -c rollup/config.js --environment BUILD:demo",
    "build:dist": "yarn clean:dist && BABEL_ENV=dist rollup -c rollup/config.js --environment BUILD:dist",
    "build": "run-s build:*",
    "preversion": "run-s type-check lint test build:dist",
    "postversion": "git push --follow-tags --no-verify && npm publish && yarn clean:dist",
    "clean:dev": "rimraf demo/.dev",
    "clean:demo": "rimraf public",
    "clean:dist": "rimraf dist .size-snapshot.json",
    "clean:cov": "rimraf coverage",
    "clean": "run-p clean:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "@babel/proposal-object-rest-spread"
    ],
    "ignore": [
      "src/polyfill.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "welly"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "public",
    "dist",
    "src/polyfill.js"
  ],
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(apng|bmp|gif|ico|cur|jpg|jpeg|jfif|pjpeg|pjp|png|svg|tif|tiff|webp)$": "<rootDir>/__mocks__/file.ts"
    },
    "collectCoverageFrom": [
      "src/*.(ts|tsx)",
      "!src/*.d.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-url": "^5.0.1",
    "@tailwindcss/ui": "^0.3.0",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/resize-observer-browser": "^0.1.3",
    "eslint": "^6.8.0",
    "eslint-config-welly": "^1.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-discard-comments": "^4.0.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.17.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^6.1.0",
    "tailwindcss": "^1.4.6",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "web-animations-js": "^2.3.2",
    "yarn": "^1.22.4"
  },
  "dependencies": {
    "use-deep-compare-effect": "^1.3.1"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  }
}
