{
  "name": "@wellyshen/use-web-animations",
  "version": "0.5.2",
  "description": "React hook for highly-performant and manipulable animations using Web Animations API.",
  "license": "MIT",
  "homepage": "https://use-web-animations.netlify.app",
  "repository": "https://github.com/wellyshen/use-web-animations",
  "bugs": "https://github.com/wellyshen/use-web-animations/issues",
  "keywords": [
    "react",
    "hook",
    "react-hook",
    "web-animations-hook",
    "use",
    "use-web-animations",
    "web-animations",
    "web-animations-api",
    "waapi",
    "animation",
    "transition",
    "motion",
    "playback-control",
    "performance",
    "interaction",
    "ux",
    "typescript"
  ],
  "author": "Welly Shen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "dev": "yarn clean:dev && rollup -c rollup/config.js -w --environment BUILD:dev",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint:style": "stylelint --fix \"**/*.{css,ts,tsx}\"",
    "lint": "run-p lint:*",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn clean:cov && yarn test --coverage",
    "build:demo": "yarn clean:dev && yarn clean:demo && rollup -c rollup/config.js --environment BUILD:demo",
    "build-full": "BABEL_ENV=dist rollup -c rollup/config.js --environment BUILD:full",
    "build-pure": "BABEL_ENV=dist rollup -c rollup/config.js --environment BUILD:pure",
    "build:dist": "run-s clean:dist build-full build-pure",
    "build": "run-s build:*",
    "preversion": "run-s type-check lint test build:dist",
    "postversion": "git push --follow-tags --no-verify && npm publish && yarn clean:dist",
    "clean:dev": "rimraf demo/.dev",
    "clean:demo": "rimraf public",
    "clean:dist": "rimraf dist .size-snapshot.json",
    "clean:cov": "rimraf coverage",
    "clean": "run-p clean:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{css,ts,tsx}": "stylelint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/typescript",
      "@babel/react"
    ],
    "plugins": [
      "@babel/proposal-object-rest-spread"
    ],
    "env": {
      "development": {
        "presets": [
          "@emotion/babel-preset-css-prop"
        ],
        "plugins": [
          "emotion"
        ]
      }
    },
    "ignore": [
      "src/polyfill.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "welly"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "emotion/jsx-import": "off"
    }
  },
  "eslintIgnore": [
    "public",
    "dist",
    "src/polyfill.js"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-prettier"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": true
    },
    "ignoreFiles": [
      "public/**/*.css",
      "coverage/**/*.css"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(apng|bmp|gif|ico|cur|jpg|jpeg|jfif|pjpeg|pjp|png|svg|tif|tiff|webp)$": "<rootDir>/__mocks__/file.ts",
      "polyfill": "<rootDir>/__mocks__/polyfill.ts"
    },
    "collectCoverageFrom": [
      "src/*.(ts|tsx)",
      "!src/index.ts",
      "!src/pure.ts",
      "!src/*.d.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.28",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-url": "^5.0.1",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.8",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/resize-observer-browser": "^0.1.3",
    "animate.css": "^4.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "eslint": "^7.2.0",
    "eslint-config-welly": "^1.3.1",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-serve": "^1.0.3",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "web-animations-js": "^2.3.2"
  },
  "dependencies": {
    "use-deep-compare-effect": "^1.3.1"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  }
}
